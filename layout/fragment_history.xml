<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.ui.fragment.profile.PurchaseHistory">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/tabBarLayout"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_marginTop="65dp"
        android:layout_height="50dp">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="57dp"
            android:background="@color/white"
            app:tabBackground="@color/white"
            app:tabGravity="fill"
            app:tabInlineLabel="true"
            app:tabMode="scrollable"
            app:tabSelectedTextColor="@android:color/black"
            app:tabTextAppearance="@style/CustomTabLayout" />


    </com.google.android.material.appbar.AppBarLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_marginTop="57dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tabBarLayout" />
    <TextView
        android:layout_width="88dp"
        android:layout_height="27dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="162dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="161dp"
        android:layout_marginBottom="739dp"
        android:fontFamily="@font/roboto"
        android:text="Профиль"
        android:textColor="@color/purple"
        android:textSize="18sp"
        android:textStyle="bold" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/history_details"
        android:layout_width="380dp"
        android:layout_height="136dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="497dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.192"
        app:strokeColor="#6D6D6D"
        app:strokeWidth="1dp"
        >

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="11dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="229dp"
            android:layout_marginBottom="106dp"
            android:fontFamily="@font/roboto"
            android:text="Дата заказа"
            android:textColor="#B0B0B0"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_marginStart="11dp"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="229dp"
            android:layout_marginBottom="106dp"
            android:fontFamily="@font/roboto"
            android:hint="Итого:"
            android:textColor="@color/black"
            android:textColorHint="#B0B0B0"
            android:textSize="12sp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="41dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="523dp"
            android:background="#8C8C8C" />

        <TextView
            android:layout_width="42dp"
            android:layout_height="20dp"
            android:layout_marginStart="305dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="21dp"
            android:layout_marginBottom="110dp"
            android:fontFamily="@font/roboto"
            android:text="Детали"
            android:textColor="@color/dark_purple"
            android:textSize="12sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/imgBtn_Details"
            android:layout_width="10dp"
            android:layout_height="13dp"
            android:layout_marginStart="358dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="108.79dp"
            android:background="@drawable/icon_arrow" />

        <ImageView
            android:id="@+id/img_product_profile1"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="11dp"
            android:layout_marginTop="56dp"
            android:layout_marginEnd="280dp"
            android:layout_marginBottom="35dp"
            android:background="@drawable/img_product1" />

        <ImageView
            android:id="@+id/img_product_profile2"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="62dp"
            android:layout_marginTop="56dp"
            android:layout_marginEnd="280dp"
            android:layout_marginBottom="35dp"
            android:background="@drawable/img_product2" />

        <ImageView
            android:id="@+id/img_product_profile3"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="113dp"
            android:layout_marginTop="56dp"
            android:layout_marginEnd="280dp"
            android:layout_marginBottom="35dp"
            android:background="@drawable/img_product3" />

        <View
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginStart="11dp"
            android:layout_marginTop="112dp"
            android:layout_marginEnd="311dp"
            android:layout_marginBottom="13.27dp"
            android:background="@drawable/img_galochka" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="96dp"
            android:layout_height="16dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="112dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="210dp"
            android:fontFamily="@font/roboto"
            android:text="Заказ доставлен"
            android:textColor="#67B454"
            android:textSize="12sp"
            android:textStyle="bold" />

    </com.google.android.material.card.MaterialCardView>


</FrameLayout>