<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.ui.fragment.profile.Help">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/tabBarLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="70dp"
        android:background="@color/white">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:background="@color/white"
            app:tabBackground="@color/white"
            app:tabGravity="fill"
            app:tabInlineLabel="true"
            app:tabMode="scrollable"
            app:tabSelectedTextColor="@android:color/black"
            app:tabTextAppearance="@style/CustomTabLayout" />


    </com.google.android.material.appbar.AppBarLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tabBarLayout"
        android:layout_marginTop="70dp" />

    <TextView
        android:layout_width="88dp"
        android:layout_height="27dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="162dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="161dp"
        android:layout_marginBottom="739dp"
        android:fontFamily="@font/roboto"
        android:text="Профиль"
        android:textColor="@color/purple"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Часто задаваемые вопросы"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColor="#392250"
        android:layout_marginTop="140dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="136dp"

        />
    <com.google.android.material.button.MaterialButton
        android:layout_width="340dp"
        android:layout_height="40dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="216dp"
        android:layout_marginBottom="608dp"
        android:backgroundTint="@color/white"
        android:text="Как сделать заказ?"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="#392250"
        android:textSize="14sp">


    </com.google.android.material.button.MaterialButton>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/icon_small_arrow"
        android:layout_marginTop="188dp"
        android:layout_marginStart="360dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="604dp"
        />
    <com.google.android.material.button.MaterialButton
        android:layout_width="340dp"
        android:layout_height="40dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="240dp"
        android:layout_marginEnd="128dp"
        android:layout_marginBottom="552dp"
        android:backgroundTint="@color/white"
        android:text="Как сделать заказ по телефону ?"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="#392250"
        android:textSize="14sp">


    </com.google.android.material.button.MaterialButton>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="360dp"
        android:layout_marginTop="248dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="604dp"
        android:src="@drawable/icon_small_arrow" />

    <com.google.android.material.button.MaterialButton
        android:layout_width="340dp"
        android:layout_height="40dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="103dp"
        android:layout_marginBottom="496dp"
        android:text="Как оплатить заказ при получении?"
        android:textColor="#392250"
        android:textSize="14sp"
        android:textAllCaps="false"
        android:textAlignment="textStart"
        android:backgroundTint="@color/white"
        >

    </com.google.android.material.button.MaterialButton>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="360dp"
        android:layout_marginTop="308dp"
        android:layout_marginEnd="28.63dp"
        android:layout_marginBottom="495.4dp"
        android:src="@drawable/icon_small_arrow" />

    <com.google.android.material.button.MaterialButton
        android:layout_width="340dp"
        android:layout_height="40dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="360dp"
        android:layout_marginEnd="196dp"
        android:layout_marginBottom="440dp"
        android:text="Как оставить чаявые ?"
        android:textColor="#392250"
        android:textSize="14sp"
        android:textAllCaps="false"
        android:textAlignment="textStart"
        android:backgroundTint="@color/white"
        >

    </com.google.android.material.button.MaterialButton>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="360dp"
        android:layout_marginTop="368dp"
        android:layout_marginEnd="28.63dp"
        android:layout_marginBottom="439.4dp"
        android:src="@drawable/icon_small_arrow" />

</FrameLayout>